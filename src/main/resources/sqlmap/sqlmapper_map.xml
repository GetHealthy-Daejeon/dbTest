			<if test='place_no != 0'>
		 		AND event_code = #{eventCode}
		 	</if>
	</select>
	
	<select id="selectSeo" resultType="map">
		SELECT * 
		from health_addr
		WHERE gu_code = "서구"
			<if test='place_no != 0'>
		 		AND event_code = #{eventCode}
		 	</if>
	</select>
	
	
	<!-- 종목 카테고리별 조회(보류) -->
	<select id="selectEventCode" resultType="map">
		SELECT * 
		from health_addr
		WHERE event_code = #{eventCode}
	</select>
	
</mapper>